# 应用配置
APP_NAME=Outlook取件助手
APP_PORT=8080
APP_ENV=development

# 数据库配置
DB_PATH=./data/outlook_helper.db

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE_HOURS=6


# Outlook API配置（必须配置）
# 部署的Outlook API服务地址，参考：https://github.com/HChaoHui/msOauth2api
OUTLOOK_API_BASE_URL=https://your-outlook-api-domain.vercel.app

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 调试配置
# 设置为true时跳过邮箱凭据验证（仅用于调试，生产环境请设置为false）
SKIP_EMAIL_VALIDATION=false

# 性能配置
# 邮箱验证并发数，控制同时验证的邮箱数量，避免对API造成过大压力（默认5）
EMAIL_VALIDATION_WORKERS=5

# 授权码配置（必须设置，否则应用无法启动）
# 用于登录系统的授权码，请设置为复杂的随机字符串
AUTH_TOKEN=your-super-secret-auth-token-change-this

# 管理员账户配置
# 用于登录系统的管理员用户名和密码
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
